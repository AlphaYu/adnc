{
  //direct
  "GlobalConfiguration": {
    "RequestIdKey": "RequestId",
    //LeastConnection,RoundRobin,NoLoadBalance,CookieStickySessions
    "LoadBalancerOptions": {
      "Type": "NoLoadBalance"
    },
    "UpstreamHeaderTransform": {
      "From": "gateway",
      "X-Forwarded-For": "{RemoteIpAddress}"
    },
    "DownstreamHeaderTransform": {
      "X-Forwarded-For": "{RemoteIpAddress}"
    },
    "RateLimitOptions": {
      //白名单，不受限流控制
      "ClientWhitelist": [],
      //是否开启限流
      "EnableRateLimiting": true,
      //限流的时间，如：1s, 5m, 1h, 1d
      "Period": "1s",
      //在限流控制时间段内最大访问数
      "Limit": 3000,
      //多少秒后客户端可以重试
      "PeriodTimespan": 10
    },
    "QoSOptions": {
      //断路器次数（发生几次请求异常后进行熔断）
      "ExceptionsAllowedBeforeBreaking": 10,
      //断路器熔断时间（毫秒）
      "DurationOfBreak": 30000,
      //超时时间
      "TimeoutValue": 5000
    }
  },
  "Routes": [
    //auth service
    {
      "DownstreamPathTemplate": "/auth{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50010
        }
      ],
      "UpstreamPathTemplate": "/auth{everything}",
      "UpstreamHttpMethod": [
        "Get",
        "Put",
        "Post",
        "Delete",
        "Options"
      ]
    },
    //usr services
    {
      "DownstreamPathTemplate": "/usr{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50010
        }
      ],
      "UpstreamPathTemplate": "/usr{everything}",
      "UpstreamHttpMethod": [
        "Get",
        "Put",
        "Post",
        "Delete",
        "Options"
      ]
    },
    //maint services
    {
      "DownstreamPathTemplate": "/maint{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50020
        }
      ],
      "UpstreamPathTemplate": "/maint{everything}",
      "UpstreamHttpMethod": [
        "Get",
        "Put",
        "Post",
        "Delete",
        "Options"
      ]
    },
    //cust services
    {
      "DownstreamPathTemplate": "/cust{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 50030
        }
      ],
      "UpstreamPathTemplate": "/cust{everything}",
      "UpstreamHttpMethod": [
        "Get",
        "Put",
        "Post",
        "Delete",
        "Options"
      ]
    }
  ]
}